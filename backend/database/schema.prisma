datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@localhost:5432/test?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  role      Role     @default(USER)
  messages  Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  sender    User?    @relation(fields: [senderId], references: [id])
  senderId  Int?
}

enum Role {
  USER
  ADMIN
}